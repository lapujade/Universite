@page
@model Universite.Pages.Instructors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Enseignant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Enseignant.Nom" class="control-label"></label>
                <input asp-for="Enseignant.Nom" class="form-control" />
                <span asp-validation-for="Enseignant.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enseignant.Prenom" class="control-label"></label>
                <input asp-for="Enseignant.Prenom" class="form-control" />
                <span asp-validation-for="Enseignant.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table align="left">
                            @{
                                int cnt = 0;

                                foreach (var affectation in Model.LesAffectationUE)
                                {

                                    @:<tr>
                                        @:<td align="left" valign="top">
                                            <input type="checkbox"
                                                   name="selectedUE"
                                                   value="@affectation.UEID"
                                                   @(Html.Raw(affectation.affecte ? "checked=\"checked\"" : "")) />
                                            @affectation.NomComplet
                                         @: </td>
                                     @: </tr>
                                }
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
